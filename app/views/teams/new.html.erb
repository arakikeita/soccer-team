<%= form_with model: @team, url: teams_path, class: 'new-team-main',local: true do |f| %>
  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        チーム情報入力
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>


    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-image">
              <span class="image-file">画像</span>
              <%=f.file_field :image, class: 'hidden' %>
          </label>
        </div>

        <div class='form-text-wrap'>
          <label class="form-text">チーム名</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :team_name, class:"input-default", id:"team_name", placeholder:"", autofocus: true %>
   
      
        <div class='form-text-wrap'>
          <label class="form-text">代表者名</label>
          <span class="indispensable">必須</span>
        </div>
         <%= f.text_field :name, class:"input-default", id:"name", placeholder:"" %>

        <div class='form-text-wrap'>
          <label class="form-text">紹介文</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :introduction , class:"input-default", id:"introduction", placeholder:"", autofocus: true %>
    </div>

     
    </div>
    <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"genre-select"}) %>
    <input name="team[user_ids][]" type="hidden" value=<%= current_user.id %>>
    <div class='login-btn'>
      <%= f.submit "チーム作成" ,class:"login-red-btn" %>
    </div>
  </div>




<% end %>