 <div class='col-md-8 offset-md-1'>
      <h2>>チーム詳細</h2>
      <table class='table table-hover table-inverse'>
        <tr>
          <td><%= image_tag @team.image, class: 'team-image' if @team.image.attached? %></td>
          <td><%= @team.team_name %></td>
          <td><%= @team.name %></td>
          <td><%= @team.area_id %></td>
          <td>
              <% @team.users.each do |member| %>
                <%= member.name %><br>
              <% end %>
          </td>
          
          <td>
              <% if @team.owner_id == current_user.id %>
                <%= link_to 'Edit', edit_team_path(@team), class: "btn btn-sm btn-success" %>
              <% elsif @team.users.include?(current_user) %>
                <%= link_to 'チームに参加する', team_path(@team), method: :delete, class: "btn btn-sm btn-danger" %>
              <% else %>
                <%= link_to 'チームを離脱する', team_join_path(@team), class: "btn btn-sm btn-success" %>
              <% end %>
        </tr>
      </table>
    </div>