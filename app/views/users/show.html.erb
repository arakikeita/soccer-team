

  <div class="user-show-main">
    <div class='user-show-form-wrap'>
            <div class='user-show-form-header'>
              <h1 class='user-show-form-header-text'>
                マイページ
              </h1>
            </div>


            <div class="user-show-form-group">
                  <div class='form-text-wrap'>
                      <div class="form-image">
                          <%= image_tag @user.image, class: 'team-image' if @user.image.attached? %>
                      </div>
                  </div>

                  <div class='user-show-form-text-wrap'>
                      <label class="user-show-form-text">名前:</label>
                      <span class="user-show-indispensable"><%= @user.nickname %></span>
                  </div>

                  <div class='user-show-form-text-wrap'>
                      <label class="user-show-form-text">代表チーム:</label>
                      <% @user.owned_teams.each do |team| %>
                        <span class="user-show-indispensable">
                          <%= link_to team.team_name, team_path(team) %>
                        </span>
                        <% end %>
                  </div>

                  <div class='user-show-form-text-wrap'>
                      <label class="user-show-form-text">所属チーム:</label>
                       <% @user.user_teams.each do |team| %>
                        <span class="user-show-indispensable">
                          <%= link_to team.team.team_name,team_path(team) %>
                        </span>
                        <% end %>
                  </div>

                  <div class='user-show-form-text-wrap'>
                      <label class="user-show-form-text">ポジション:</label>
                      <span class="user-show-indispensable"><%= @user.position.name %></span>
                  </div>

                    <div class='user-show-form-text-wrap'>
                      <label class="user-show-form-text">得意なプレー:</label>
                      <span class="user-show-indispensable"><%= @user.play %></span>
                  </div>
            </div>

      <div class='user-show-login-btn'>
          <% if @user.id == current_user.id %>
             <div class="user-show-login-red-btn"><%= link_to '編集', edit_user_registration_path(@user) ,class:"user-show-login-red-btn"%></div>
            <div class="user-show-login-red-btn"><%= link_to '削除',user_path(@user),method: :delete,data: { confirm: '本当に削除しますか？' } ,class:"user-show-login-red-btn" %></div>           
          <% end %>
      </div>

      
              

   
        

    </div>
</div>


    


