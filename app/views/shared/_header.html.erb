                      <li>
                          <%= link_to '練習試合応募一覧', games_path ,class: "logout" %>
                      </li>
                  </ul>
              </div>
              <!--ここまでメニュー-->
          </div>




        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
