          <li class="a"><%= link_to current_user.nickname, "/users/#{current_user.id}", class: "user-nickname" %></li> 
          <li class="d"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>  

          <div class="hamburger-menu">
              <input type="checkbox" id="menu-btn-check">
              <label for="menu-btn-check" class="menu-btn"><span></span></label>
            <!--ここからメニュー-->
              <div class="menu-content">
                  <ul>
                      <li>
                          <%= link_to 'チーム新規作成', new_team_path, class: "logout" %>
